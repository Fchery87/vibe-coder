# AI Provider API Keys
# Get these from your respective provider dashboards

# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI API Key (https://makersuite.google.com/app/apikey)
GOOGLE_API_KEY=your_google_api_key_here

# xAI API Key (https://console.x.ai/)
XAI_API_KEY=your_xai_api_key_here

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3003

# Supabase Configuration
# Get these from your Supabase project settings (https://supabase.com/dashboard)
# Settings > Database > Connection string

# Session Mode Pooler - for app queries (Prisma Client)
# Format: postgres://postgres.PROJECT-REF:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres
DATABASE_URL=postgres://postgres.your-project-ref:[YOUR-PASSWORD]@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Direct Connection - for migrations (Prisma Migrate)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-ref.supabase.co:5432/postgres

# Supabase API (Settings > API)
# Project URL and API keys
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Redis Configuration (Required for Phase 1.2: Message Queue & Background Jobs)
#
# Free Tier Option: Upstash Redis (REST API)
# 1. Sign up at https://console.upstash.com/
# 2. Create a new Redis database
# 3. In your database dashboard, find "REST API" section
# 4. Copy UPSTASH_REDIS_REST_URL and UPSTASH_REDIS_REST_TOKEN
# 5. Paste them below
#
# Format:
UPSTASH_REDIS_REST_URL=https://your-endpoint.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token_here
#
# Used for:
# - Background job processing (BullMQ)
# - Caching LLM responses
# - Session storage
# - Rate limiting

# Logging & Monitoring (Phase 1.4)
#
# BetterStack Logtail - FREE log aggregation and monitoring
# 1. Sign up at https://betterstack.com/logtail (FREE tier: 1GB/month)
# 2. Create a new source
# 3. Copy the source token
# 4. Paste it below
#
# Format:
LOGTAIL_SOURCE_TOKEN=your_logtail_source_token_here
#
# Optional: Log level (trace, debug, info, warn, error, fatal)
LOG_LEVEL=info
#
# Used for:
# - Centralized log aggregation
# - Error tracking and alerts
# - Performance monitoring
# - Audit logging
# - Security event tracking